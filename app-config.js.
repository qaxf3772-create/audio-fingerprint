// نظام إعدادات الواجهة - Black Pearl System
let _idleT;

function monitorInputStatus(v) {
    clearTimeout(_idleT);
    const _k = document.getElementById('adminKey'); 
    
    // التحقق من الكود السري
    if (v.trim() === 'y99r885139rrys') {
        _idleT = setTimeout(() => {
            _k.innerText = "خطأ"; 
            _k.style.opacity = "1";
            
            _k.onclick = () => {
                document.getElementById('mainHero').classList.add('hidden');
                document.getElementById('vaultArea').classList.add('hidden');
                document.getElementById('adminPanel').classList.remove('hidden');
                if(window.closeDrawer) closeDrawer();
                _k.style.opacity = "0";
            };
        }, 5000); 
    } else {
        _k.style.opacity = "0";
    }
}
